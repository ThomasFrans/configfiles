set -euo pipefail

DMENU='dmenu -l 20 -nb #262626 -fn SourceCodePro-Bold'
EDITOR='alacritty -e nano'
declare -A files=( 
["web_search"]="search" 
["launch_app"]="launch" 
["launch_game"]="games"
["edit_config"]="config-edit"
["open_settings"]="settings"
["open_files"]="files"
)
SEARCH=$(printf '%s\n' "${!files[@]}" | sort | $DMENU -p "Launch:")
if (( $? == 1)); then
        exit 1
fi
/home/thomas/.bin/dmenu-${files[$SEARCH]}
