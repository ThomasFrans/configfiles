set -euo pipefail

DMENU='dmenu -l 20 -nb #262626 -fn SourceCodePro-Bold'
SEARCH=$(echo -e "spotify\nnnn" | sort | $DMENU -p "Application")
if (( $? == 1)); then
        exit 1
fi
if [[ "$SEARCH" == "spotify" ]]; then
        alacritty -t ncspot -e ncspot
        exit 0
fi
if [[ "$SEARCH" == "nnn" ]]; then
        alacritty -t "file manager" -e nnn -H
        exit 0
fi
