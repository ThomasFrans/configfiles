set -euo pipefail

DMENU='dmenu -l 20 -nb #262626 -fn SourceCodePro-Bold'
declare -A GAMES=(
["noita"]="881100"
["hollow_knight"]="367520"
["celeste"]="504230"
["everhood"]="1229380"
)
SEARCH=$(printf '%s\n' ${!GAMES[@]} | sort | $DMENU -p "Game:")
if (( $? == 1)); then
        exit 1
fi
steam steam://rungameid/${GAMES[$SEARCH]}
