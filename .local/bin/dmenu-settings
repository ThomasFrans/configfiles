#!/usr/bin/env bash
set -euo pipefail

DMENU='dmenu -l 20 -nb #262626 -fn SourceCodePro-Bold'
BROWSER='xdg-open'
SETTINGS=(background datetime display info-overview keyboard mouse network notifications online-accounts power printers privacy region search screen sharing sound universal-access user-accounts)
SETTING=$(printf '%s\n' ${SETTINGS[@]} | sort | $DMENU -p "Panel:")
if (( $? == 1)); then
	exit 1
fi
gnome-control-center $SETTING
